<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/fondo_textview_vibrante" />
            <stroke
                android:width="2dp"
                android:color="@color/borde_textview_vibrante" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:id="@+id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/progreso_textview_vibrante" />
                <corners android:radius="8dp" />
            </shape>
        </clip>
    </item>
</layer-list>
